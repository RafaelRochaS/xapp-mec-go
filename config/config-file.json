{
    "name": "mec-xapp",
    "version": "1.0.0",
    "containers": [
        {
            "name": "mec-xapp",
            "image": {
                "registry": "127.0.0.0:5000",
                "name": "mec-xapp",
                "tag": "0.0.20"
            }
        }
    ],
    "livenessProbe": {
        "httpGet": {
            "path": "ric/v1/health/alive",
            "port": 8080
        },
        "initialDelaySeconds": 5,
        "periodSeconds": 15
    },
    "readinessProbe": {
        "httpGet": {
            "path": "ric/v1/health/ready",
            "port": 8080
        },
        "initialDelaySeconds": 5,
        "periodSeconds": 15
    },
    "messaging": {
        "ports": [
            {
                "name": "http",
                "container": "mec-xapp",
                "port": 8080,
                "description": "http service"
            },
            {
                "name": "rmrroute",
                "container": "mec-xapp",
                "port": 4561,
                "description": "rmr route port for mec-xapp"
            },
            {
                "name": "rmrdata",
                "container": "mec-xapp",
                "port": 4560,
                "rxMessages": ["RIC_INDICATION"],
                "txMessages": [],
                "mtypes" : [],
                "policies": [1],
                "description": "rmr data port for mec-xapp"
            }
        ]
    },
    "rmr": {
        "protPort": "tcp:4560",
        "maxSize": 2072,
        "numWorkers": 1,
        "txMessages": ["RIC_HEALTH_CHECK_RESP"],
        "rxMessages": ["RIC_HEALTH_CHECK_REQ"],
    "policies": [1]
    },
    "controls": {
           "logger": {
                   "level": 4
           }
    },
    "db" : {
            "waitForSdl": true
    },
    "offload": {
      "threshold": 85,
      "repository": "hub.docker.com",
      "namespace": "mec"
    }
}
